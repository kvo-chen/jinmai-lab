{
  "builds": [
    { "src": "dist/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "status": 404 },
    { "src": "/assets/(.*)", "dest": "/dist/assets/$1" },
    { "src": "/robots.txt", "dest": "/dist/robots.txt" },
    { "src": "/sitemap.xml", "dest": "/dist/sitemap.xml" },
    { "src": "/(.*)", "dest": "/dist/index.html" }
  ]
}
